{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "netbalance",
  "version": "0.1.0",
  "identifier": "com.netbalance.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "visible": false,
        "title": "netbalance",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Visible",
        "url": "/app",
        "maximized": true
      },
      {
        "label": "splashscreen",
        "url": "splashscreen",
        "title": "netbalance",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "copyright": "Â© 2025 codcax",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
